[user]
	email = {{ myemail }}
	name = {{ myfullname }}
[core]
	pager = /usr/share/git/diff-highlight/diff-highlight| less -x4
[diff]
	algorithm = patience
	colormoved = dimmed-zebra
	colormovedws = ignore-all-space
[interactive]
	diffFilter = /usr/share/git/diff-highlight/diff-highlight| less -x4
[stash]
	showPatch = true
[commit]
	gpgsign = true
	cleanup = scissors
[push]
	autoSetupRemote = true
[pull]
	ff = only
[init]
	defaultBranch = master
[mergetool]
	keepBackup = false
	hideResolved = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
	tool = fugitive
[rebase]
	stat = true
[sendemail]
	sendmailcmd = /usr/share/doc/msmtp/msmtpq/msmtpq
	confirm = auto
