# Mails are handled by mbsync
set folder = ~/.local/share/mail
set mbox_type = Maildir
set mail_check = 0
# Personal settings
source ~/.config/mutt/personal.rc

# Cache mails
set header_cache = ~/.cache/mutt/headers
set message_cachedir = ~/.cache/mutt/bodies

# colors
source ~/.config/mutt/colors.rc
# key bindings
source ~/.config/mutt/bindings.rc
# GnuPG
source ~/.config/mutt/gpg.rc

# sorting
set sort = threads
set sort_aux = last-date-received
set strict_threads
unset collapse_unread
folder-hook . 'exec collapse-all'
folder-hook . 'set record=^'
# smooth scrolling
set menu_scroll
set menu_context = 4
unset menu_move_off
set pager_index_lines = 4
set pager_context = 3
set index_format = "%4C %Z %[%b %d %R] %-15.15L (%?l?%4l&%4c?) %s"

set tilde
unset markers

# Its not 1991 anymore, we can use UTF8
set send_charset = "utf-8"

# HTML mails
set mailcap_path = ~/.config/mutt/mailcap
auto_view text/html
alternative_order text/plain text/html

# Contacts
set query_command = "echo ; grep -i %s ~/.cache/mutt/aliases
set query_format = "%3c %t %-35.35a %-25.25n %?e?(%e)?"

# don't bottleneck me with unnecessary messages
set sleep_time = 0
set sendmail_wait = -1
unset wait_key
set delete = yes
set fast_reply
set include = yes
unset help
# f=f, see https://nullprogram.com/blog/2017/06/15/
source ~/.config/mutt/format_flowed.rc
# include message in replies
set include
set attribution = "On %d, %n wrote:"
unset use_domain
set attach_save_dir = "/tmp"
