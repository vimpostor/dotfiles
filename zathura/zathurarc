# See man zathurarc
set adjust-open "width"
set font "Roboto Mono 10"
set guioptions ""
set selection-clipboard clipboard

# Rebind keys
map d feedkeys 5j
map u feedkeys 5k
map D feedkeys 10j
map U feedkeys 10k
map o jumplist backward
map J navigate next
map K navigate previous
map <Right> navigate next
map <Left> navigate previous
map [fullscreen] <Right> navigate next
map [fullscreen] <Left> navigate previous

# latex reverse search
set synctex true
set synctex-editor-command "vim --remote-silent +%{line} %{input}"
